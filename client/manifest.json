{
  "name": "EONTA",
  "short_name": "EONTA",
  "description": "GPS-based audio composition and exploration platform",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#4A90E2",
  "theme_color": "#4A90E2",
  "icons": [
    {
      "src": "/assets/img/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "/assets/img/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "permissions": [
    "geolocation",
    "storage"
  ],
  "orientation": "any",
  "prefer_related_applications": false,
  "serviceworker": {
    "src": "service-worker.js",
    "scope": "/"
  },
  "screenshots": [
    {
      "src": "/assets/img/screenshot-1.png",
      "sizes": "1280x720",
      "type": "image/png"
    },
    {
      "src": "/assets/img/screenshot-2.png",
      "sizes": "1280x720",
      "type": "image/png"
    }
  ]
}