# EONTA Environment Variables
# Copy this file to .env and fill in your specific configuration

# Server Configuration
PORT=3000
NODE_ENV=development
SESSION_SECRET=your_secure_session_secret

# MongoDB Database
MONGODB_URI=mongodb://localhost:27017/eonta
MONGODB_USER=
MONGODB_PASS=

# Google Maps API
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# AWS S3 Configuration for Audio Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-eonta-bucket

# Email Configuration for Sharing Compositions
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com

# Security Settings
JWT_SECRET=your_secure_jwt_secret
JWT_EXPIRATION=7d
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://eonta.app

# Path Recording Settings
MAX_RECORDING_DURATION_MS=3600000  # 1 hour
MIN_RECORDING_DISTANCE_M=2         # 2 meters
PATH_CAPTURE_INTERVAL_MS=1000      # 1 second

# Audio Settings
MAX_AUDIO_FILE_SIZE_MB=30
ALLOWED_AUDIO_FORMATS=ogg,mp3,m4a
DEFAULT_TRANSITION_RADIUS_M=10